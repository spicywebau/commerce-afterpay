{% from "_includes/forms" import textField, lightswitchField, selectField, autosuggestField %}

{{ autosuggestField({
	label: 'Merchant ID',
	id: 'merchantId',
	class: 'ltr',
	name: 'merchantId',
	suggestEnvVars: true,
	value: gateway.merchantId,
	required: true
}) }}

{{ autosuggestField({
	label: 'Merchant Key',
	id: 'merchantKey',
	class: 'ltr',
	name: 'merchantKey',
	suggestEnvVars: true,
	value: gateway.merchantKey,
	required: true
}) }}

{{ lightswitchField({
	label: 'Sandbox Mode?',
	name: 'sandboxMode',
	on: gateway.sandboxMode,
}) }}

{{ selectField({
	label: 'Region',
	name: 'region',
	options: [
		{
			label: 'AU/NZ',
			value: 'AU/NZ'
		},
		{
			label: 'US/CA',
			value: 'US/CA'
		}
	],
	value: 'AU',
	on: gateway.region,
}) }}
